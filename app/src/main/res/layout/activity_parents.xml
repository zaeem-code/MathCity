<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ParentsActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_light">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:onClick="back"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/quiztitel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Parents Details"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/option"
        android:hint="Enter Father/Mother Name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="10dp"
        android:textColor="@android:color/holo_blue_light" />


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/option"
        android:hint="Enter His/Her Email"
        android:inputType="textEmailAddress"
        android:maxLines="2"
        android:paddingHorizontal="10dp"
        android:textColor="@android:color/holo_blue_light" />


    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ce"
        android:gravity="center"
        android:onClick="save"
        android:text="Save!"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >

                <com.airbnb.lottie.LottieAnimationView
                    app:lottie_autoPlay="true"
                    android:visibility="visible"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/parenting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />





            </RelativeLayout>



        </RelativeLayout>



    </LinearLayout>

</LinearLayout>