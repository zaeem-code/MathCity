<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/learning_bg"
    tools:context=".Activities.TestingDifficultySelection_Activity">
    <RelativeLayout

        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:onClick="back"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"

            android:text="TESTING SECTION"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </RelativeLayout>

    <TextView
        android:onClick="action"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/medium"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/easy"
        android:text="EASY"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/cb"/>




    <TextView
        android:onClick="action"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/medium"
        android:layout_marginVertical="20dp"
        android:text="MEDIUM"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/mc"/>

    <TextView
        android:onClick="action"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/medium"

        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/hard"
        android:text="HARD"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/hc"/>
</RelativeLayout>