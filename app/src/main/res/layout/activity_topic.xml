<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8ff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".Activities.TopicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_gravity="bottom"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/header"
        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:onClick="back"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"  />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:id="@+id/quiztitel"
            android:text="Topics"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:weightSum="9"
        android:layout_marginTop="90dp" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            android:padding="5dp"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@android:color/holo_blue_light"
            android:outlineSpotShadowColor="@android:color/holo_blue_light"
            tools:targetApi="p" >
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:text="DIVISION"
                    android:paddingHorizontal="5dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:background="@drawable/back"
                    android:text="GO"
                    android:id="@+id/div"
                    android:onClick="Go"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_light"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            android:padding="5dp"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@android:color/holo_blue_light"
            android:outlineSpotShadowColor="@android:color/holo_blue_light"
            tools:targetApi="p" >
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:text="MULTIPLICATION"
                    android:paddingHorizontal="5dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:background="@drawable/back"
                    android:text="GO"
                    android:id="@+id/mul"
                    android:onClick="Go"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_light"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/View1"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            android:padding="5dp"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@android:color/holo_blue_light"
            android:outlineSpotShadowColor="@android:color/holo_blue_light"
            tools:targetApi="p" >
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:text="ADDITION"
                    android:paddingHorizontal="5dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:background="@drawable/back"
                    android:text="GO"
                    android:id="@+id/add"
                    android:onClick="Go"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_light"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            android:padding="5dp"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@android:color/holo_blue_light"
            android:outlineSpotShadowColor="@android:color/holo_blue_light"
            tools:targetApi="p" >
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:text="SUBTRACTION"
                    android:paddingHorizontal="5dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:background="@drawable/back"
                    android:text="GO"
                    android:id="@+id/sub"
                    android:onClick="Go"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_light"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            android:padding="5dp"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@android:color/holo_blue_light"
            android:outlineSpotShadowColor="@android:color/holo_blue_light"
            tools:targetApi="p" >
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:text="PARITY"
                    android:paddingHorizontal="5dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:background="@drawable/back"
                    android:text="GO"
                    android:id="@+id/evn"
                    android:onClick="Go"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_light"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_marginHorizontal="40dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/holo_blue_light"
            android:padding="5dp"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@android:color/holo_blue_light"
            android:outlineSpotShadowColor="@android:color/holo_blue_light"
            tools:targetApi="p" >
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:text="REASONING"
                    android:paddingHorizontal="5dp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:background="@drawable/back"
                    android:text="GO"
                    android:id="@+id/anl"
                    android:onClick="Go"
                    android:autoSizeMaxTextSize="30sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_light"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>






    </LinearLayout>
</FrameLayout>
