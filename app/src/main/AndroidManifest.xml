<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mathcity.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity android:name=".Activities.TopicActivity"></activity>
        <activity android:name=".Activities.ParentsActivity" />
        <activity android:name=".Activities.recordsActivity" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity android:name=".Activities.FinalResultsActivity" />
        <activity android:name=".Activities.QuizActivity" />
        <activity android:name=".Activities.TestingDifficultySelection_Activity" />
        <activity android:name=".Activities.YoutubePlayerActivity" />
        <activity android:name=".Activities.Learning_List_Activity" />
        <activity android:name="com.mathcity.myapplication.Activities.Home" />
        <activity android:name=".Activities.register" />
        <activity android:name=".Activities.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>